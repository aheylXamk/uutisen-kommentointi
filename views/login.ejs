<%- include("includes/header") -%>

<div class="container">

    <form class="form-signin" method="POST" action="/login/">
    
        <h2 class="mb-3">Kirjaudu sisään</h2>

        <label for="tunnus" class="sr-only">Käyttäjätunnus</label>

        <input type="text" id="tunnus" name="tunnus" class="form-control" placeholder="Kirjoita tunnus..." autofocus>

        <label for="salasana" class="sr-only">Salasana</label>

        <input type="password" id="salasana" name="salasana" class="form-control" placeholder="Kirjoita salasana">

        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Kirjaudu">
        <a href="/" class="btn btn-lg btn-primary btn-block">Peruuta</a>

        <% if (virhe) { %>

            <div class="alert alert-danger">
                <%=virhe%>
            </div>    

        <% } %>



    </form>

</div>

<%- include("includes/footer") -%>